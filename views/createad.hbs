<h1>New Ad</h1>

{{#if errors.length}}
<h1>Couldn't create new post beacuse </h1>
{{#each errors}}
<ul>
	<li>
		{{this}}
	</li>
</ul>
{{/each}}
{{else}}
<form class="ml-2" action="/index/create" method="POST" encType="multipart/form-data">
	<input type="hidden" name="_csrf" value="{{csrfToken}}">
	<div class="text-left ">
		<p class="mb-0">Name:</p>
		<input type="text" name="name">
	</div>
	<div class="text-left">
		<p class="mb-0">Description:</p>
		<textarea name="description"></textarea>
	</div>
	<div class="text-left mb-0">
		<p class="mb-0">Age:</p>
		<input type="text" name="age">
	</div>
	<div class="text-left mt-2 mb-2">
		Upload image:
		<input type="file" name="imageFile">
	</div>
	{{#if session.AdminIsLoggedIn}}
	    <p class="text-left mb-0 mt-2">Cat owner:</p>
	{{#each cat_owner}}
	    <div class="form-group  mb-0">
		    <label class="form-radio  mb-0">
		    	<input type="radio" name="catownerid" value="{{Cat_owner_id}}" checked>	
		    	<i class="form-icon"></i>
		    	<p class="text-left  mb-0">
					{{Firstname}} {{Lastname}}
		    	</p>
		    </label>
	    </div>
	{{/each}}	
	{{else}}
	    <input type="hidden" name="catownerid" value="{{session.CatownerID}}">
	{{/if}}
	<div>
		<input class="float-left mt-2" type="submit" value="Create">
	</div>
</form>
{{/if}}