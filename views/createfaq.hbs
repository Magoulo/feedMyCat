<h1>new FAQpost!</h1>
{{#each errors}}
<li>{{this}}</li>
{{/each}}

<form action="/faq/create" method="POST">
	<input type="hidden" name="_csrf" value="{{csrfToken}}">
	<div class="text-left">
		<p class="mb-0">Question:</p>
		<input type="text" name="question">
	</div>
	<div class="text-left mb-0">
		<p class="mb-0">Answer:</p>
		<input type="text" name="answer">
	</div>
	<div>
		<input class="float-left mt-2" type="submit" value="Create">
	</div>
</form>