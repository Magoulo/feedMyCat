<!--body-->
<body class="bg-dark grow">
  <header class="navbar columns mt-0">
    <div class="col-12">
      <div class="hero-sm bg-dark col-12">
        <div class="hero-body text-left mx-2 my-2">
          <h1 class="ml-2">Feed My Cat</h1>
          <p class="mb-0 ml-2" style="font-family: cursive;">Sometimes life gets in the way...</p>
        </div>
      </div>
      <section class="navbar-section col-12 bg-secondary">
        <!--Dropdown menu-->
        <div class="dropdown dropdown-right">
          <a href="#" class="btn btn-link dropdown-toggle" tabindex="0">My account <i class="icon icon-caret"></i>
          </a>
          <!-- menu component -->
          <ul class="menu">
            <!-- menu item standard -->
            <li class="menu-item text-primary">
              {{#if session.isLoggedIn}}
              <form action="/auth/logout" method="POST">
                <input class="btn" type="submit" value="Log out">
              </form>
              {{else}}
              <a href="/auth/login"><button class="btn">Login</button></a>
              {{/if}}
            </li>
          </ul>
        </div>
      </section>
    </div>
  </header>
  <div class="container">
    <div class="columns">
      <div class="column col-2 bg-secondary mx-0 text-large">
        <ul class="nav ml-2">
          <li>
            <a href="/">Cat Ads</a>
          </li>
          <li>
            <a href="/about">About Us</a>
          </li>
          <li>
            <a href="/donationalternative">Donation Alternatives</a>
          </li>
          <li>
            <a href="/contact">Contact</a>
          </li>
          <li>
            <a href="/faq">FAQ</a>
          </li>
          {{#if session.UserIsLoggedIn}}
          <li>
            <a href="/myads">My ads</a>
          </li>
          {{/if}}
        </ul>
      </div>
      <div class="col-10">
        <!--main-->
        <main class="text-center bg-dark mb-2">
          {{{body}}}
        </main>
      </div>
    </div>
  </div>
</body>
