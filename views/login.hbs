{{#if hasDatabaseError}}
<p>Couldn't log in at the moment</p>

{{else}}
{{#if errors.length}}
<p>Couldn't Log in because:</p>
<ul>
	{{#each errors}}
	<li>{{this}}</li>
	{{/each}}
</ul>
{{/if}}
{{/if}}

<form action="/auth/login" method="POST">
<input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="form-group bg-grey" style="margin-left: 20px;">
    <div>
      <label class="form-label text-left">Username</label>
      <input class="form-input col-4" type="text" name="username" placeholder="Username">
    </div>
    <div>
      <label class="form-label text-left">Password</label>
      <input class="form-input col-4" type="password" name="password" placeholder="Password" style="margin-bottom: 10px;">
    </div>
      <input class="float-left btn" type="submit" value="Sign in">
  </div>
  </form>
 <a href="/auth/create" class="float-left" style="margin-left: 10px;"><button class="btn">Create account</button></a>
  
