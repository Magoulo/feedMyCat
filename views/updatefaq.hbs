<h1>Update FAQ</h1>
{{#if hasDatabaseError}}
  <p>The FAQ you are trying to update does not exist</p>
{{else}}
    {{#if errors.length}}
        <p>Couldn't update the FAQ-post because:</p>
        <ul>
	        {{#each errors}}
	            <li>
					{{this}}
				</li>
        	{{/each}}
        </ul>
    {{/if}}
{{/if}}
<div class="float-left">
    <form action="/faq/{{faq.Faq_id}}/update" method="POST">
	    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    	<div class="text-left">
	    	<p class="mb-0">Question:</p> <textarea name="question">{{faq.Question}}</textarea>
	    </div>
	    <div class="text-left">
		    <p class="mb-0">Answer:</p> <textarea name="answer">{{faq.Answer}}</textarea>	
	    </div>
	    <div>
		    <input class="btn float-left" type="submit" value="Update">
	    </div>
    </form>
</div>
